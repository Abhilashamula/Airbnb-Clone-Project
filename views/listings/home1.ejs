<% layout("/layouts/biolerplate") %>
<div class="containerhome">
  <div class="scrolling-row-wrapper">
    <div class="scrolling-row">
      <% for (let listing of alllistings) { %>
      <div class="card-container home1">
        <a
          href="/listing/<%= listing._id %>"
          class="card-link"
          style="text-decoration: none; color: inherit"
        >
          <div
            class="card"
            style="width: 100%; height: 100%; perspective: 1000px"
          >
            <img
              src="<%= listing.image.url %>"
              class="card-img-top"
              alt="Hotel Images"
              style="height: 15rem; object-fit: cover"
            />
            <div class="card-body">
              <p class="card-text">
                Title: <b><%= listing.title %></b><br />
                Price: &#8377;<%= listing.price %>/Night<br />
                Location: <%= listing.location %><br />
                Country: <%= listing.country %>
              </p>
            </div>
          </div>
        </a>
      </div>
      <% } %>
    </div>
  </div>
</div>
